// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  DRIVER
  PASSENGER
}

model User {
  id              String      @id
  password        String
  role            Role
  name            String
  surname         String
  email           String      @unique
  phoneNumber     String      @unique
  username        String      @unique
  idCard          String?     @unique
  sessions        Session[]
  driverInfo      DriverInfo? @relation(fields: [driverInfoId], references: [id], onDelete: Cascade)
  driverInfoId    String?     @unique
  ratingsGiven    Rating[]    @relation(name: "from")
  ratingsReceived Rating[]    @relation(name: "to")
  trips           Trip[]      @relation(name: "trips")
  reservedTrips   Trip[]      @relation(name: "usersToAccept")
}

model DriverInfo {
  id            String    @id @default(cuid())
  profilePic    Bytes
  User          User?
  license       License   @relation(fields: [licenseNumber], references: [number], onDelete: Cascade)
  licenseNumber String    @unique
  vehicles      Vehicle[]
  trips         Trip[]
}

model Vehicle {
  licensePlate String     @id
  model        String
  maxPass      Int
  DriverInfo   DriverInfo @relation(fields: [driverInfoId], references: [id])
  driverInfoId String
  Trip         Trip[]
}

model License {
  number     String      @id
  expiration DateTime
  DriverInfo DriverInfo?
}

model Trip {
  id                  String     @id @default(cuid())
  createdAt           DateTime   @default(now())
  depCity             String
  arrCity             String
  depTime             String
  estArrTime          String
  cost                Decimal
  finished            Boolean    @default(false)
  note                String?    @db.Text
  Users               User[]     @relation(name: "trips")
  UsersToAccept       User[]     @relation(name: "usersToAccept")
  vehicle             Vehicle    @relation(fields: [vehicleLicensePlate], references: [licensePlate])
  DriverInfo          DriverInfo @relation(fields: [driverInfoId], references: [id])
  Ratings             Rating[]
  driverInfoId        String
  vehicleLicensePlate String
}

model Rating {
  id         String  @id
  star       Int
  desc       String  @db.Text
  FromUser   User    @relation(fields: [FromUserId], references: [id], name: "from")
  FromUserId String
  ToUser     User    @relation(fields: [ToUserId], references: [id], name: "to")
  ToUserId   String
  Trip       Trip?   @relation(fields: [tripId], references: [id])
  tripId     String?
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}
